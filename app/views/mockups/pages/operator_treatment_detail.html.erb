<% content_for :page_title, "Treatment Detail" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-3 mb-2">
        <%= link_to mockups_operator_treatments_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold text-gray-900 font-mono">#20251224-143052-001</h1>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-700">
          Completed
        </span>
      </div>
      <p class="text-gray-500">December 24, 2025 at 2:30 PM</p>
    </div>
    <div class="flex items-center gap-3">
      <button class="inline-flex items-center gap-2 px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
        </svg>
        Print
      </button>
      <div class="relative group">
        <button class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-[#D93611] to-[#F2811D] text-white font-medium rounded-lg hover:shadow-lg">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
          </svg>
          Export
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div class="absolute right-0 mt-2 w-32 bg-white rounded-lg shadow-lg border border-gray-100 hidden group-hover:block z-10">
          <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-t-lg">CSV</a>
          <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-b-lg">Excel (XLS)</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
      <p class="text-sm text-gray-500 mb-1">Device</p>
      <p class="font-semibold text-gray-900">CoreTraQer005</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
      <p class="text-sm text-gray-500 mb-1">Duration</p>
      <p class="font-semibold text-gray-900">15 min 23 sec</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
      <p class="text-sm text-gray-500 mb-1">Max Temperature</p>
      <p class="font-semibold text-[#32D9D9]">38.9°C</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
      <p class="text-sm text-gray-500 mb-1">Alerts</p>
      <p class="font-semibold text-gray-900">None</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left: Patient Info + Details -->
    <div class="space-y-6">
      <!-- Patient Info -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-100">
          <h3 class="font-semibold text-gray-900">Patient Information</h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex justify-between">
            <span class="text-gray-500">Name</span>
            <span class="font-medium text-gray-900">Anonymous Session</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Age</span>
            <span class="font-medium text-gray-900">42 years</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Sex</span>
            <span class="font-medium text-gray-900">Male</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Weight</span>
            <span class="font-medium text-gray-900">78 kg</span>
          </div>
        </div>
      </div>

      <!-- Session Info -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-100">
          <h3 class="font-semibold text-gray-900">Session Details</h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex justify-between">
            <span class="text-gray-500">Started</span>
            <span class="font-medium text-gray-900">2:30:15 PM</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Ended</span>
            <span class="font-medium text-gray-900">2:45:38 PM</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Measurements</span>
            <span class="font-medium text-gray-900">923 readings</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Avg. Interval</span>
            <span class="font-medium text-gray-900">1.0 sec</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right: Chart -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
          <h3 class="font-semibold text-gray-900">Temperature Chart</h3>
          <div class="flex items-center gap-4 text-sm">
            <div class="flex items-center gap-2">
              <div class="w-3 h-0.5 bg-[#F59E0B]"></div>
              <span class="text-gray-500">39°C</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-3 h-0.5 bg-[#EF4444]"></div>
              <span class="text-gray-500">40°C</span>
            </div>
          </div>
        </div>
        <div class="p-6">
          <div class="relative h-80">
            <svg class="w-full h-full" viewBox="0 0 800 300" preserveAspectRatio="none">
              <defs>
                <linearGradient id="chartGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#32D9D9;stop-opacity:0.4" />
                  <stop offset="100%" style="stop-color:#32D9D9;stop-opacity:0.05" />
                </linearGradient>
              </defs>
              
              <!-- Grid -->
              <line x1="50" y1="50" x2="780" y2="50" stroke="#E5E7EB" stroke-dasharray="4,4"/>
              <line x1="50" y1="100" x2="780" y2="100" stroke="#E5E7EB" stroke-dasharray="4,4"/>
              <line x1="50" y1="150" x2="780" y2="150" stroke="#E5E7EB" stroke-dasharray="4,4"/>
              <line x1="50" y1="200" x2="780" y2="200" stroke="#E5E7EB" stroke-dasharray="4,4"/>
              <line x1="50" y1="250" x2="780" y2="250" stroke="#E5E7EB"/>
              
              <!-- Thresholds -->
              <line x1="50" y1="75" x2="780" y2="75" stroke="#EF4444" stroke-width="2" stroke-dasharray="8,4"/>
              <line x1="50" y1="125" x2="780" y2="125" stroke="#F59E0B" stroke-width="2" stroke-dasharray="8,4"/>
              
              <!-- Y-axis labels -->
              <text x="25" y="55" fill="#6B7280" font-size="12" text-anchor="middle">40°</text>
              <text x="25" y="105" fill="#6B7280" font-size="12" text-anchor="middle">39°</text>
              <text x="25" y="155" fill="#6B7280" font-size="12" text-anchor="middle">38°</text>
              <text x="25" y="205" fill="#6B7280" font-size="12" text-anchor="middle">37°</text>
              <text x="25" y="255" fill="#6B7280" font-size="12" text-anchor="middle">36°</text>
              
              <!-- X-axis labels -->
              <text x="100" y="275" fill="#6B7280" font-size="11" text-anchor="middle">0m</text>
              <text x="250" y="275" fill="#6B7280" font-size="11" text-anchor="middle">5m</text>
              <text x="415" y="275" fill="#6B7280" font-size="11" text-anchor="middle">10m</text>
              <text x="580" y="275" fill="#6B7280" font-size="11" text-anchor="middle">15m</text>
              
              <!-- Area fill -->
              <path fill="url(#chartGradient)" d="M100,220 L150,215 L200,205 L250,195 L300,180 L350,165 L400,150 L450,145 L500,140 L550,135 L600,130 L650,125 L700,130 L750,140 L750,250 L100,250 Z"/>
              
              <!-- Temperature line -->
              <path fill="none" stroke="#32D9D9" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" d="M100,220 L150,215 L200,205 L250,195 L300,180 L350,165 L400,150 L450,145 L500,140 L550,135 L600,130 L650,125 L700,130 L750,140"/>
              
              <!-- Points at key moments -->
              <circle cx="650" cy="125" r="5" fill="#32D9D9" stroke="white" stroke-width="2"/>
              <text x="665" y="120" fill="#32D9D9" font-size="11" font-weight="600">38.9°C max</text>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Raw Data (Collapsible) -->
  <details class="bg-white rounded-xl shadow-sm border border-gray-100">
    <summary class="px-6 py-4 cursor-pointer font-semibold text-gray-900 hover:bg-gray-50">
      Raw Data (923 measurements)
    </summary>
    <div class="px-6 pb-6">
      <div class="overflow-x-auto max-h-64">
        <table class="w-full text-sm">
          <thead class="bg-gray-50 sticky top-0">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Time</th>
              <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Temperature</th>
              <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Reliability</th>
              <th class="px-4 py-2 text-left text-xs font-semibold text-gray-500">Battery</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <tr><td class="px-4 py-2">00:00:01</td><td class="px-4 py-2">36.8°C</td><td class="px-4 py-2">98%</td><td class="px-4 py-2">74%</td></tr>
            <tr><td class="px-4 py-2">00:00:02</td><td class="px-4 py-2">36.9°C</td><td class="px-4 py-2">98%</td><td class="px-4 py-2">74%</td></tr>
            <tr><td class="px-4 py-2">00:00:03</td><td class="px-4 py-2">37.0°C</td><td class="px-4 py-2">99%</td><td class="px-4 py-2">74%</td></tr>
            <tr><td class="px-4 py-2">00:00:04</td><td class="px-4 py-2">37.1°C</td><td class="px-4 py-2">99%</td><td class="px-4 py-2">74%</td></tr>
            <tr><td class="px-4 py-2">00:00:05</td><td class="px-4 py-2">37.2°C</td><td class="px-4 py-2">98%</td><td class="px-4 py-2">74%</td></tr>
            <tr><td class="px-4 py-2 text-gray-400" colspan="4">... and 918 more rows</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </details>
</div>
