<% content_for :page_title, "Devices" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Devices</h1>
      <p class="text-gray-500 mt-1">Manage your registered thermometers</p>
    </div>
    <button class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-[#D93611] to-[#F2811D] text-white font-medium rounded-xl hover:shadow-lg transition-all">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Add Device
    </button>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
    <div class="flex items-center gap-2">
      <button class="px-4 py-2 rounded-lg text-sm font-medium bg-[#32D9D9] text-white">
        All (3)
      </button>
      <button class="px-4 py-2 rounded-lg text-sm font-medium text-gray-600 hover:bg-gray-100">
        Online (2)
      </button>
      <button class="px-4 py-2 rounded-lg text-sm font-medium text-gray-600 hover:bg-gray-100">
        Offline (1)
      </button>
    </div>
  </div>

  <!-- Devices Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-100">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Device</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Temperature</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Assigned To</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Last Seen</th>
          <th class="px-6 py-4 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <!-- Device 1 - Online, Active -->
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[#D93611] to-[#F2811D] flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">CoreTraQer005</p>
                <p class="text-sm text-gray-500">PT-2025-00123</p>
              </div>
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
              <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5 animate-pulse"></span>
              Online
            </span>
          </td>
          <td class="px-6 py-4">
            <span class="text-lg font-bold text-[#32D9D9]">38.2°C</span>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-full bg-purple-500 flex items-center justify-center text-white text-xs font-medium">JD</div>
              <span class="text-gray-900">John Doe</span>
            </div>
          </td>
          <td class="px-6 py-4 text-gray-500">2 min ago</td>
          <td class="px-6 py-4 text-right">
            <%= link_to mockups_admin_device_detail_path(id: 1), class: "text-[#008B8B] hover:text-[#32D9D9] font-medium" do %>
              View →
            <% end %>
          </td>
        </tr>

        <!-- Device 2 - Online, Idle -->
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[#D93611] to-[#F2811D] flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">CoreTraQer006</p>
                <p class="text-sm text-gray-500">PT-2025-00124</p>
              </div>
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
              <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5"></span>
              Online
            </span>
          </td>
          <td class="px-6 py-4">
            <span class="text-gray-400">—</span>
          </td>
          <td class="px-6 py-4">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-full bg-pink-500 flex items-center justify-center text-white text-xs font-medium">JS</div>
              <span class="text-gray-900">Jane Smith</span>
            </div>
          </td>
          <td class="px-6 py-4 text-gray-500">5 min ago</td>
          <td class="px-6 py-4 text-right">
            <%= link_to mockups_admin_device_detail_path(id: 2), class: "text-[#008B8B] hover:text-[#32D9D9] font-medium" do %>
              View →
            <% end %>
          </td>
        </tr>

        <!-- Device 3 - Offline -->
        <tr class="hover:bg-gray-50 bg-gray-50/50">
          <td class="px-6 py-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-gray-300 flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">CoreTraQer007</p>
                <p class="text-sm text-gray-500">PT-2025-00125</p>
              </div>
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
              <span class="w-1.5 h-1.5 bg-gray-400 rounded-full mr-1.5"></span>
              Offline
            </span>
          </td>
          <td class="px-6 py-4">
            <span class="text-gray-400">—</span>
          </td>
          <td class="px-6 py-4">
            <span class="text-gray-400 italic">Unassigned</span>
          </td>
          <td class="px-6 py-4 text-gray-400">2 hours ago</td>
          <td class="px-6 py-4 text-right">
            <%= link_to mockups_admin_device_detail_path(id: 3), class: "text-[#008B8B] hover:text-[#32D9D9] font-medium" do %>
              View →
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
