<% content_for :page_title, "Billing" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Billing & Subscription</h1>
    <p class="text-gray-500 mt-1">Manage your license and payment information</p>
  </div>

  <!-- Plan & Payment Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Current Plan -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-[#D93611] to-[#F2811D]">
        <h2 class="text-lg font-semibold text-white">Current Plan</h2>
      </div>
      <div class="p-6">
        <div class="flex items-start justify-between mb-6">
          <div>
            <h3 class="text-xl font-bold text-gray-900">Annual License</h3>
            <p class="text-gray-500 mt-1">1 Device • Unlimited Treatments</p>
          </div>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-700">
            Active
          </span>
        </div>

        <div class="flex items-end justify-between mb-6">
          <div>
            <span class="text-4xl font-bold text-gray-900">€499</span>
            <span class="text-gray-500">/year</span>
          </div>
          <div class="text-right">
            <p class="text-sm text-gray-500">Next billing date</p>
            <p class="font-semibold text-gray-900">February 15, 2026</p>
          </div>
        </div>

        <div class="pt-4 border-t border-gray-100">
          <button class="w-full py-3 px-4 bg-gray-100 text-gray-700 font-medium rounded-xl hover:bg-gray-200 transition-colors flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            Manage in Stripe Portal
          </button>
        </div>
      </div>
    </div>

    <!-- Payment Method -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100">
        <h2 class="text-lg font-semibold text-gray-900">Payment Method</h2>
      </div>
      <div class="p-6">
        <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl mb-6">
          <div class="w-12 h-8 bg-gradient-to-r from-blue-600 to-blue-400 rounded flex items-center justify-center">
            <span class="text-white text-xs font-bold">VISA</span>
          </div>
          <div class="flex-1">
            <p class="font-medium text-gray-900">•••• •••• •••• 4242</p>
            <p class="text-sm text-gray-500">Expires 12/26</p>
          </div>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
            Default
          </span>
        </div>

        <button class="w-full py-3 px-4 border-2 border-gray-200 text-gray-700 font-medium rounded-xl hover:border-[#32D9D9] hover:text-[#008B8B] transition-colors">
          Update Payment Method
        </button>
      </div>
    </div>
  </div>

  <!-- Invoices -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Invoice History</h2>
      <button class="text-sm text-[#008B8B] hover:text-[#32D9D9] font-medium">Download All</button>
    </div>
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Invoice</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Amount</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Download</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <span class="font-mono text-sm text-gray-900">INV-2025-001</span>
          </td>
          <td class="px-6 py-4 text-gray-500">Feb 15, 2025</td>
          <td class="px-6 py-4 font-medium text-gray-900">€499.00</td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
              Paid
            </span>
          </td>
          <td class="px-6 py-4 text-right">
            <button class="text-[#008B8B] hover:text-[#32D9D9] font-medium">PDF</button>
          </td>
        </tr>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <span class="font-mono text-sm text-gray-900">INV-2024-012</span>
          </td>
          <td class="px-6 py-4 text-gray-500">Feb 15, 2024</td>
          <td class="px-6 py-4 font-medium text-gray-900">€499.00</td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
              Paid
            </span>
          </td>
          <td class="px-6 py-4 text-right">
            <button class="text-[#008B8B] hover:text-[#32D9D9] font-medium">PDF</button>
          </td>
        </tr>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <span class="font-mono text-sm text-gray-900">INV-2023-008</span>
          </td>
          <td class="px-6 py-4 text-gray-500">Feb 15, 2023</td>
          <td class="px-6 py-4 font-medium text-gray-900">€449.00</td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
              Paid
            </span>
          </td>
          <td class="px-6 py-4 text-right">
            <button class="text-[#008B8B] hover:text-[#32D9D9] font-medium">PDF</button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Need Help -->
  <div class="bg-[#E8F5F5] rounded-xl p-6">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 rounded-full bg-[#32D9D9] flex items-center justify-center flex-shrink-0">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="flex-1">
        <h3 class="font-semibold text-[#008B8B]">Need help with billing?</h3>
        <p class="text-sm text-[#008B8B]/80">Contact our support team for any questions about your subscription or payments.</p>
      </div>
      <a href="mailto:support@physiotraq.com" class="px-4 py-2 bg-[#32D9D9] text-white font-medium rounded-lg hover:bg-[#008B8B] transition-colors">
        Contact Support
      </a>
    </div>
  </div>
</div>
