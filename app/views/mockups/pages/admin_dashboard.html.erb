<% content_for :page_title, "Dashboard" %>

<div class="space-y-8">
  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- License Status -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 rounded-lg bg-gradient-to-r from-[#D93611] to-[#F2811D] flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          Active
        </span>
      </div>
      <h3 class="text-sm font-medium text-gray-500">License Status</h3>
      <p class="text-2xl font-bold text-gray-900 mt-1">Valid</p>
      <p class="text-sm text-gray-500 mt-2">Expires Feb 15, 2026</p>
    </div>

    <!-- Devices -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 rounded-lg bg-[#32D9D9] flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
          </svg>
        </div>
        <%= link_to "View all →", mockups_admin_devices_path, class: "text-sm text-[#008B8B] hover:text-[#32D9D9]" %>
      </div>
      <h3 class="text-sm font-medium text-gray-500">Devices</h3>
      <p class="text-2xl font-bold text-gray-900 mt-1">3</p>
      <div class="flex items-center gap-3 mt-2 text-sm">
        <span class="flex items-center text-green-600">
          <span class="w-2 h-2 bg-green-500 rounded-full mr-1"></span>
          2 online
        </span>
        <span class="flex items-center text-gray-400">
          <span class="w-2 h-2 bg-gray-300 rounded-full mr-1"></span>
          1 offline
        </span>
      </div>
    </div>

    <!-- Treatments Today -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 rounded-lg bg-[#008B8B] flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <%= link_to "View all →", mockups_admin_treatments_path, class: "text-sm text-[#008B8B] hover:text-[#32D9D9]" %>
      </div>
      <h3 class="text-sm font-medium text-gray-500">Treatments Today</h3>
      <p class="text-2xl font-bold text-gray-900 mt-1">6</p>
      <div class="flex items-center gap-3 mt-2 text-sm">
        <span class="text-green-600">5 completed</span>
        <span class="text-blue-600">1 in progress</span>
      </div>
    </div>

    <!-- Team -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 rounded-lg bg-purple-500 flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
        <%= link_to "Manage →", mockups_admin_team_path, class: "text-sm text-[#008B8B] hover:text-[#32D9D9]" %>
      </div>
      <h3 class="text-sm font-medium text-gray-500">Team Members</h3>
      <p class="text-2xl font-bold text-gray-900 mt-1">4</p>
      <p class="text-sm text-gray-500 mt-2">1 admin, 3 operators</p>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="px-6 py-4 border-b border-gray-100">
      <h2 class="text-lg font-semibold text-gray-900">Recent Activity</h2>
    </div>
    <div class="divide-y divide-gray-100">
      <!-- Activity Item 1 -->
      <div class="px-6 py-4 flex items-start gap-4">
        <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">Treatment completed</p>
          <p class="text-sm text-gray-500">CoreTraQer005 • Session #20251224-143052</p>
        </div>
        <span class="text-sm text-gray-400">10 min ago</span>
      </div>

      <!-- Activity Item 2 -->
      <div class="px-6 py-4 flex items-start gap-4">
        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">Device connected</p>
          <p class="text-sm text-gray-500">CoreTraQer006 came online</p>
        </div>
        <span class="text-sm text-gray-400">1 hour ago</span>
      </div>

      <!-- Activity Item 3 -->
      <div class="px-6 py-4 flex items-start gap-4">
        <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">New team member added</p>
          <p class="text-sm text-gray-500">Sarah Wilson joined as Operator</p>
        </div>
        <span class="text-sm text-gray-400">2 hours ago</span>
      </div>

      <!-- Activity Item 4 -->
      <div class="px-6 py-4 flex items-start gap-4">
        <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900">Temperature alert triggered</p>
          <p class="text-sm text-gray-500">39°C threshold reached during session</p>
        </div>
        <span class="text-sm text-gray-400">Yesterday</span>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <%= link_to mockups_admin_devices_path, class: "bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md hover:border-[#32D9D9] transition-all group" do %>
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-gray-100 group-hover:bg-[#E8F5F5] flex items-center justify-center transition-colors">
          <svg class="w-6 h-6 text-gray-500 group-hover:text-[#008B8B]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 group-hover:text-[#008B8B]">Add New Device</h3>
          <p class="text-sm text-gray-500">Register a thermometer</p>
        </div>
      </div>
    <% end %>

    <%= link_to mockups_admin_team_path, class: "bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md hover:border-[#32D9D9] transition-all group" do %>
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-gray-100 group-hover:bg-[#E8F5F5] flex items-center justify-center transition-colors">
          <svg class="w-6 h-6 text-gray-500 group-hover:text-[#008B8B]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 group-hover:text-[#008B8B]">Invite Team Member</h3>
          <p class="text-sm text-gray-500">Add an operator</p>
        </div>
      </div>
    <% end %>

    <%= link_to mockups_admin_billing_path, class: "bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md hover:border-[#32D9D9] transition-all group" do %>
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-lg bg-gray-100 group-hover:bg-[#E8F5F5] flex items-center justify-center transition-colors">
          <svg class="w-6 h-6 text-gray-500 group-hover:text-[#008B8B]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 group-hover:text-[#008B8B]">Manage Billing</h3>
          <p class="text-sm text-gray-500">View invoices & plan</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
